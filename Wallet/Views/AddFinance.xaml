<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wallet.Views.AddFinance"
             BackgroundColor="#3a3a3a">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Frame BackgroundColor="#303030"
                   CornerRadius="5"
                   HasShadow="True"
                   Margin="20, 10, 20, 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".4*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Money"
                           FontSize="20"
                           VerticalOptions="Center"
                           TextColor="White"/>

                    <Entry Grid.Column="1"
                           x:Name="MoneyInput"
                           Keyboard="Numeric"
                           TextColor="White"
                           />
                </Grid>
            </Frame>

            <Frame Grid.Row="1"
                   BackgroundColor="#303030"
                   CornerRadius="5"
                   HasShadow="True"
                   Margin="20,10,20,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".4*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Category"
                           FontSize="20"
                           VerticalOptions="Center"
                           TextColor="White"/>

                    <Picker Grid.Column="1"
                            Title="Category"
                            x:Name="CategoryPicker"
                            SelectedIndexChanged="Picker_SelectedIndexChanged"
                            >
                        <Picker.Items>
                            <x:String>Entertainment</x:String>
                            <x:String>Work</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>
            </Frame>

            <Frame Grid.Row="2"
                   BackgroundColor="#303030"
                   CornerRadius="5"
                   HasShadow="True"
                   Margin="20, 10, 20, 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Expense / Income"
                           FontSize="20"
                           VerticalOptions="Center"
                           TextColor="White"/>

                    <CheckBox Grid.Column="1"
                              CheckedChanged="CheckBox_CheckedChanged"/>
                </Grid>
            </Frame>

            <Button Grid.Row="4"
                    Text="Save"
                    FontSize="20"
                    Margin="60,0,60,0"
                    Clicked="Button_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>